<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/background_selector">

    <TextView
        android:id="@+id/cikkszamHeader"
        android:layout_width="110dp"
        android:layout_height="40dp"
        android:layout_marginStart="2dp"
        android:maxLines="1"
        android:paddingStart="2dp"
        android:text="Cikkszám"
        android:textAlignment="textStart"
        android:textColor="@android:color/black"
        android:textSize="16sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/desc1Header"
        android:layout_width="120dp"
        android:layout_height="0dp"
        android:layout_marginStart="2dp"
        android:maxLines="3"
        android:paddingStart="2dp"
        android:text="Megjegyzés1"
        android:textAlignment="textStart"
        android:textColor="@android:color/black"
        android:textSize="16sp"
        app:layout_constraintBottom_toBottomOf="@+id/cikkszamHeader"
        app:layout_constraintStart_toEndOf="@+id/cikkszamHeader"
        app:layout_constraintTop_toTopOf="parent" />


    <TextView
        android:id="@+id/desc2Header"
        android:layout_width="90dp"
        android:layout_height="0dp"
        android:layout_marginStart="2dp"
        android:maxLines="1"
        android:paddingEnd="10dp"
        android:text="Megjegyzes2"
        android:textAlignment="textEnd"
        android:textColor="@android:color/black"
        android:textSize="16sp"
        app:layout_constraintBottom_toBottomOf="@+id/cikkszamHeader"
        app:layout_constraintStart_toEndOf="@+id/desc1Header"
        app:layout_constraintTop_toTopOf="parent" />


    <TextView
        android:id="@+id/mennyisegHeader"
        android:layout_width="100dp"
        android:layout_height="0dp"
        android:layout_marginStart="12dp"
        android:maxLines="1"
        android:text="Mennyiség"
        android:textAlignment="center"
        android:textColor="@android:color/black"
        android:textSize="16sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toEndOf="@+id/desc2Header"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/megjegyzesHeader"
        android:layout_width="100dp"
        android:layout_height="0dp"
        android:layout_marginStart="2dp"
        android:maxLines="1"
        android:paddingStart="5dp"
        android:text="Megjegyzés"
        android:textAlignment="center"
        android:textColor="@android:color/black"
        android:textSize="16sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toEndOf="@+id/mennyisegHeader"
        app:layout_constraintTop_toTopOf="parent" />


    <TextView
        android:id="@+id/bizszamTxt"
        android:layout_width="100dp"
        android:layout_height="0dp"
        android:layout_marginStart="2dp"
        android:maxLines="1"
        android:textAlignment="center"
        android:textColor="@android:color/black"
        android:textSize="16sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toEndOf="@+id/megjegyzesHeader"
        app:layout_constraintTop_toTopOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>